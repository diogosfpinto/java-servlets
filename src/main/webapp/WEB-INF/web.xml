<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>Alura-Java-Servlets</display-name>
    <welcome-file-list>
        <welcome-file>hello-world.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>PersonController</servlet-name>
        <servlet-class>br.com.alura.gerenciador.servlet.PersonController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>PersonController</servlet-name>
        <url-pattern>/persons-2</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>gtvgfilter</filter-name>
        <filter-class>br.com.alura.gerenciador.filters.GTVGFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>gtvgfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
